mixin footer(data)
  footer.footer
    .footer-social
      a(href="#" title="").footer-social__item.footer-social__item--fb
        i.fa.fa-facebook
      a(href="#" title="").footer-social__item.footer-social__item--in
        i.fa.fa-instagram
      a(href="#" title="").footer-social__item.footer-social__item--sn
        i.fa.fa-snapchat-ghost
    .footer-menu
      for page in pages
        if (page.active == true)
          .footer-menu__item._active
            span #{page.title}
        else
          .footer-menu__item
            a(href=page.slug) #{page.title}
